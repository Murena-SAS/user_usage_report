<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>

	<table>
		<name>*dbprefix*usage_report</name>
		<declaration>
			<field>
				<name>user_id</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>action</name>
				<type>text</type>
				<notnull>false</notnull>
				<length>64</length>
			</field>
			<field>
				<name>timestamp</name>
				<type>timestamp</type>
				<default/>
				<notnull>false</notnull>
			</field>

			<index>
				<name>usage_report_uta</name>
				<field>
					<name>user_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>action</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>timestamp</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>
